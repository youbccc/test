pipeline {
  agent none

  stages {
    stage('Checkout') {
      agent any
      steps {
        git branch: 'main', url: 'https://github.com/youbccc/test.git'
      }
    }
    stage('Build') {
      agent {
        docker { image 'maven:3-openjdk-8' }
      }
      steps {
        sh 'mvn clean package -DskipTests=true'
      }
    }
    stage('Test') {
      agent {
        docker { image 'maven:3-openjdk-8' }
      }
      steps {
        sh 'mvn test'
      }
    }
    stage('Build Docker Image') {
      agent any
      steps {
        sh 'docker image build -t youbc/hello:latest .'
      }
    }
    stage('Tag Docker Image') {
      agent any
      steps {
        sh 'docker image tag youbc/hello:latest youbc/hello:$BUILD_NUMBER'
      }
    }
    stage('Publish Docker Image') {
      agent any
      steps {
        withDockerRegistry(credentialsId: 'docker-hub-token', url: 'https://index.docker.io/v1/') {
          sh 'docker push youbc/hello:$BUILD_NUMBER'
          sh 'docker push youbc/hello:latest'
        }
      }
    }
    stage('Run Docker Container') {
      agent {
	docker { 
          image 'c1t1d0s7/jenkins-ansible'
          args '-u 0:0 -e DOCKER_HOST=tcp://192.168.56.110:2375'
        }
      }
      steps {
        ansiblePlaybook(playbook: 'docker-container-deploy.yaml')
      }
    }
  }
}
